{
  "name": "tapayz-games-demo",
  "version": "1.0.2",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "build:prod": "vue-tsc --noEmit && vite build --mode production",
    "preview": "vite preview",
    "lint": "eslint . --fix --ignore-path .gitignore",
    "postversion": "node scripts/postversion.cjs",
    "pm2": "yarn build:prod && pm2 serve dist 4000 --spa --name vite-app",
    "deploy": "yarn build:prod && pm2 start ecosystem.config.js",
    "deploy:stop": "pm2 stop tapayz-games-demo",
    "deploy:restart": "pm2 restart tapayz-games-demo",
    "deploy:reload": "pm2 reload tapayz-games-demo",
    "deploy:delete": "pm2 delete tapayz-games-demo"
  },
  "dependencies": {
    "@mdi/font": "6.2.95",
    "axios": "^1.12.2",
    "core-js": "^3.34.0",
    "roboto-fontface": "*",
    "vue": "^3.4.21",
    "vuetify": "^3.5.8"
  },
  "devDependencies": {
    "@babel/types": "^7.24.0",
    "@types/node": "^20.11.25",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vue/eslint-config-typescript": "^13.0.0",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-config-vuetify": "^1.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-vue": "^9.22.0",
    "pinia": "^2.1.7",
    "sass": "^1.71.1",
    "typescript": "^5.4.2",
    "unplugin-auto-import": "^0.17.5",
    "unplugin-fonts": "^1.1.1",
    "unplugin-vue-components": "^0.26.0",
    "unplugin-vue-router": "^0.8.4",
    "vite": "^5.1.5",
    "vite-plugin-vue-layouts": "^0.11.0",
    "vite-plugin-vuetify": "^2.0.3",
    "vue-router": "^4.3.0",
    "vue-tsc": "^2.0.6"
  }
}
